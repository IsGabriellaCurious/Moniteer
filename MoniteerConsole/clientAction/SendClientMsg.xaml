        <TextBlock HorizontalAlignment="Left" Margin="10,19,0,0" TextWrapping="Wrap" Text="Enter message..." VerticalAlignment="Top" Width="165"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="209,385,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
